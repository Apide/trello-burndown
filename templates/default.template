    <a href="/">home</a>
	<h1>{{header}} {{sprint}}</h1>

	<h2>Burndown chart</h2>
	<figure style="width: 900px; height: 250px;" id="burndownChart"></figure>
	<p>
		<span>dotted: ideal estimate</span></br>
		<span>line: done estimate</span>
	</p>
	<h2>Done estimate vs. effort (daily)</h2>
	<figure style="width: 900px; height: 250px;" id="effortChart"></figure>
	<p>
		<span>dotted: done effort</span><br/>
		<span>line: done estimate</span>
	</p>
	<h2>Done estimate vs. effort (total)</h2>
	<figure style="width: 900px; height: 250px;" id="totalEffortChart"></figure>
	<p>
		<span>dotted: done effort (total)</span><br/>
		<span>line: done estimate </span>
	</p>

	<script>
	      var data = {
		  "xScale": "ordinal",
		  "yScale": "linear",
		  "type": "line",
		  "main": [
		    {
		      "className": ".main.l1",
		      "data": [
		        {{#burndown.data1}}
		        	{ "x": "{{x}}", "y": {{y}} },
    			{{/burndown.data1}}
              ]
		    }
          ],
		  "comp": [
			  {
	            "className": ".main.l2",
	            "type": "line-dotted",
	            "data": [
				  {{#burndown.data2}}
		        	{ "x": "{{x}}", "y": {{y}} },
	    		  {{/burndown.data2}}
	            ]
		      }
		  ]
	      };

      var myChart = new xChart("bar", data, "#burndownChart");
      </script>

	  <script>
	      var data = {
		  "xScale": "ordinal",
		  "yScale": "linear",
		  "type": "line",
		  "main": [
		    {
		      "className": ".pizza",
		      "data": [
		      	{{#effortDaily.data1}}
		        	{ "x": "{{x}}", "y": {{y}} },
    			{{/effortDaily.data1}}
		          ]
		    }
    	  ],
		  "comp": [
			   {
	           "className": ".pizza",
	           "type": "line-dotted",
	           "data": 
	           	[
		           	{{#effortDaily.data2}}
			        	{ "x": "{{x}}", "y": {{y}} },
	    			{{/effortDaily.data2}}
		          ]
			    }
			  ]
			};
      var myChart = new xChart("bar", data, "#effortChart");
      </script>

      <script>
	      var data = {
		  "xScale": "ordinal",
		  "yScale": "linear",
		  "type": "line",
		  "main": [
		    {
		      "className": ".pizza",
		      "data": [
		      	{{#effortTotal.data1}}
		        	{ "x": "{{x}}", "y": {{y}} },
    			{{/effortTotal.data1}}
		          ]
		    }
    	  ],
		  "comp": [
			   {
	           "className": ".pizza",
	           "type": "line-dotted",
	           "data": [
	           	{{#effortTotal.data2}}
		        	{ "x": "{{x}}", "y": {{y}} },
    			{{/effortTotal.data2}}
	          ]
		    }
		  ]

	};
      var myChart = new xChart("bar", data, "#totalEffortChart");
      </script>

      <p>
      	Data generated on {{generationTime}}
      </p>
	</body>
</html>